<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClaudeCodeMAUI.Views.AssignNameDialog"
             Title="Assegna Nome Sessione">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto" Padding="30" RowSpacing="20">

        <!-- Titolo -->
        <Label Grid.Row="0"
               Text="Assegna un Nome alla Sessione"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Info sessione corrente -->
        <VerticalStackLayout Grid.Row="1" Spacing="8" Padding="15" BackgroundColor="#2A2A2A">
            <Label Text="Sessione selezionata:"
                   FontSize="12"
                   TextColor="Gray" />
            <Label x:Name="SessionIdLabel"
                   FontFamily="Consolas"
                   FontSize="11"
                   TextColor="LightGray" />
        </VerticalStackLayout>

        <!-- Campo Nome -->
        <VerticalStackLayout Grid.Row="2" Spacing="8">
            <Label Text="Nome:"
                   FontSize="14"
                   FontAttributes="Bold" />
            <Entry x:Name="NameEntry"
                   Placeholder="es. Bug fix authentication, Nuovo feature cart, ..."
                   FontSize="14"
                   MaxLength="255"
                   TextChanged="OnNameEntryTextChanged" />
            <Label Text="ðŸ’¡ Usa un nome descrittivo per identificare facilmente questa sessione"
                   FontSize="11"
                   TextColor="Gray" />
        </VerticalStackLayout>

        <!-- Pulsanti Azioni -->
        <HorizontalStackLayout Grid.Row="3"
                               Spacing="15"
                               HorizontalOptions="End"
                               Margin="0,10,0,0">
            <Button Text="Annulla"
                    BackgroundColor="#555555"
                    TextColor="White"
                    Clicked="OnCancelClicked"
                    MinimumWidthRequest="120" />
            <Button x:Name="SaveButton"
                    Text="ðŸ’¾ Salva"
                    BackgroundColor="#28A745"
                    TextColor="White"
                    Clicked="OnSaveClicked"
                    IsEnabled="False"
                    MinimumWidthRequest="120" />
        </HorizontalStackLayout>

    </Grid>

</ContentPage>
