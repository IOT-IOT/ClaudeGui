<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ClaudeCodeMAUI.Models"
             x:Class="ClaudeCodeMAUI.Views.SessionSelectorPage"
             Title="Seleziona Sessione">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" Padding="20">

        <!-- Titolo e descrizione -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,15">
            <Label Text="Seleziona una sessione esistente o creane una nuova"
                   FontSize="18"
                   FontAttributes="Bold" />
            <Label Text="Sessioni raggruppate per Working Directory (ordinate per attività recente)"
                   FontSize="12"
                   TextColor="Gray" />
        </VerticalStackLayout>

        <!-- Dropdown: Selezione rapida Working Directory -->
        <Grid Grid.Row="1" Margin="0,0,0,15" ColumnDefinitions="Auto,*">
            <Label Grid.Column="0"
                   Text="Working Directory:"
                   FontSize="14"
                   VerticalOptions="Center"
                   Margin="0,0,15,0" />
            <Picker Grid.Column="1"
                    x:Name="WorkingDirectoryPicker"
                    ItemsSource="{Binding AllWorkingDirectories}"
                    ItemDisplayBinding="{Binding DisplayText}"
                    SelectedItem="{Binding SelectedWorkingDir}"
                    SelectedIndexChanged="OnWorkingDirSelected"
                    FontSize="13"
                    BackgroundColor="#2A2A2A"
                    TextColor="White" />
        </Grid>

        <!-- Carousel: Top 10 Working Directories più recenti (Tabs) -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Freccia Sinistra -->
            <Button Grid.Column="0"
                    Text="◄"
                    FontSize="20"
                    WidthRequest="40"
                    BackgroundColor="#3A3A3A"
                    TextColor="White"
                    Clicked="OnScrollCarouselLeft"
                    Margin="0,0,10,0" />

            <!-- Carousel Tabs -->
            <CollectionView Grid.Column="1"
                            x:Name="WorkingDirCarousel"
                            ItemsSource="{Binding TopWorkingDirectories}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedWorkingDir}"
                            SelectionChanged="OnCarouselSelectionChanged"
                            ItemsLayout="HorizontalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="#2A2A2A"
                                Stroke="#555555"
                                StrokeThickness="1"
                                Padding="15,10"
                                Margin="5,0">
                            <Label Text="{Binding ShortDisplayText}"
                                   FontSize="13"
                                   TextColor="White"
                                   VerticalOptions="Center" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Freccia Destra -->
            <Button Grid.Column="2"
                    Text="►"
                    FontSize="20"
                    WidthRequest="40"
                    BackgroundColor="#3A3A3A"
                    TextColor="White"
                    Clicked="OnScrollCarouselRight"
                    Margin="10,0,0,0" />
        </Grid>

        <!-- Intestazioni Colonne Tabella -->
        <Grid Grid.Row="3"
              Padding="10"
              BackgroundColor="#1A1A1A"
              ColumnDefinitions="180,100,250,*,380"
              Margin="0,0,0,2">
            <Label Grid.Column="0"
                   Text="Last Update"
                   FontSize="13"
                   FontAttributes="Bold"
                   TextColor="LightGray"
                   VerticalOptions="Center" />
            <Label Grid.Column="1"
                   Text="File Size"
                   FontSize="13"
                   FontAttributes="Bold"
                   TextColor="LightGray"
                   VerticalOptions="Center" />
            <Label Grid.Column="2"
                   Text="Name"
                   FontSize="13"
                   FontAttributes="Bold"
                   TextColor="LightGray"
                   VerticalOptions="Center" />
            <Label Grid.Column="3"
                   Text="Working Directory"
                   FontSize="13"
                   FontAttributes="Bold"
                   TextColor="LightGray"
                   VerticalOptions="Center" />
            <Label Grid.Column="4"
                   Text="Session ID"
                   FontSize="13"
                   FontAttributes="Bold"
                   TextColor="LightGray"
                   VerticalOptions="Center" />
        </Grid>

        <!-- Lista sessioni (tabella) -->
        <CollectionView x:Name="SessionsCollectionView"
                        Grid.Row="4"
                        SelectionMode="Single"
                        SelectionChanged="OnSessionSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10"
                          Margin="0,2,0,2"
                          BackgroundColor="#2A2A2A"
                          ColumnDefinitions="180,100,250,*,380">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2A2A2A" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#3A5A7A" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <FlyoutBase.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Apri con Notepad++" Clicked="OnOpenWithNotepadClicked" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Aggiorna Messaggi" Clicked="OnUpdateMessagesClicked" />
                            </MenuFlyout>
                        </FlyoutBase.ContextFlyout>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="2" Tapped="OnSessionDoubleTapped" />
                        </Grid.GestureRecognizers>

                        <!-- Colonna 1: Last Update -->
                        <Entry Grid.Column="0"
                               Text="{Binding FormattedDate}"
                               FontSize="12"
                               TextColor="White"
                               BackgroundColor="Transparent"
                               IsReadOnly="True"
                               VerticalOptions="Center"
                               FontFamily="Consolas"
                               InputTransparent="True" />

                        <!-- Colonna 2: File Size -->
                        <Entry Grid.Column="1"
                               Text="{Binding FormattedFileSize}"
                               FontSize="12"
                               TextColor="LightBlue"
                               BackgroundColor="Transparent"
                               IsReadOnly="True"
                               VerticalOptions="Center"
                               FontFamily="Consolas"
                               HorizontalTextAlignment="End"
                               InputTransparent="True" />

                        <!-- Colonna 3: Name (EDITABILE) -->
                        <Entry Grid.Column="2"
                               Text="{Binding DisplayName}"
                               FontSize="12"
                               TextColor="White"
                               BackgroundColor="Transparent"
                               IsReadOnly="False"
                               VerticalOptions="Center"
                               Unfocused="OnNameEntryUnfocused" />

                        <!-- Colonna 4: Working Directory -->
                        <Entry Grid.Column="3"
                               Text="{Binding WorkingDirectory}"
                               FontSize="11"
                               TextColor="LightGray"
                               BackgroundColor="Transparent"
                               IsReadOnly="True"
                               VerticalOptions="Center"
                               FontFamily="Consolas"
                               InputTransparent="True" />

                        <!-- Colonna 5: Session ID (completo) -->
                        <Entry Grid.Column="4"
                               Text="{Binding SessionId}"
                               FontSize="11"
                               TextColor="LightGray"
                               BackgroundColor="Transparent"
                               IsReadOnly="True"
                               VerticalOptions="Center"
                               FontFamily="Consolas"
                               InputTransparent="True" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Pulsanti Azioni -->
        <HorizontalStackLayout Grid.Row="5"
                               Spacing="15"
                               HorizontalOptions="End"
                               Margin="0,20,0,0">
            <Button Text="Nuova Sessione"
                    BackgroundColor="#4A7C4A"
                    TextColor="White"
                    Clicked="OnNewSessionClicked"
                    MinimumWidthRequest="150" />
            <Button x:Name="OpenFileButton"
                    Text="Apri File .jsonl"
                    BackgroundColor="#4A6B9A"
                    TextColor="White"
                    Clicked="OnOpenFileClicked"
                    MinimumWidthRequest="150"
                    IsEnabled="False" />
            <Button Text="Annulla"
                    BackgroundColor="#555555"
                    TextColor="White"
                    Clicked="OnCancelClicked"
                    MinimumWidthRequest="120" />
            <Button Text="Aggiorna Vista"
                    ToolTipProperties.Text="Ricarica la lista dal database senza scansionare il filesystem"
                    BackgroundColor="#4A4A4A"
                    TextColor="White"
                    Clicked="OnRefreshClicked"
                    MinimumWidthRequest="120" />
            <Button Text="Sincronizza Filesystem"
                    ToolTipProperties.Text="Scansiona le directory .claude/projects e sincronizza con il database"
                    BackgroundColor="#CC6600"
                    TextColor="White"
                    Clicked="OnRescanClicked"
                    MinimumWidthRequest="180" />
        </HorizontalStackLayout>

    </Grid>

</ContentPage>
