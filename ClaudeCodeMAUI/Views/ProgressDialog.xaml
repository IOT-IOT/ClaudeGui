<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClaudeCodeMAUI.Views.ProgressDialog"
             Title="Importazione Messaggi"
             BackgroundColor="#1E1E1E">

    <Grid Padding="40" VerticalOptions="Center">
        <Frame BackgroundColor="#2A2A2A"
               BorderColor="#555555"
               CornerRadius="10"
               Padding="30"
               HasShadow="True">
            <VerticalStackLayout Spacing="20">

                <!-- Titolo -->
                <Label x:Name="TitleLabel"
                       Text="Importazione in corso..."
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />

                <!-- Messaggio dettaglio -->
                <Label x:Name="MessageLabel"
                       Text="Scansione file in corso..."
                       FontSize="14"
                       TextColor="LightGray"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />

                <!-- Progress Bar -->
                <ProgressBar x:Name="ProgressBar"
                             Progress="0"
                             ProgressColor="#4A7C4A"
                             HeightRequest="20"
                             Margin="0,10,0,0" />

                <!-- Contatore messaggi -->
                <Label x:Name="CounterLabel"
                       Text="0 / 0 messaggi processati"
                       FontSize="13"
                       TextColor="LightBlue"
                       HorizontalOptions="Center"
                       FontFamily="Consolas" />

                <!-- VelocitÃ  import -->
                <Label x:Name="SpeedLabel"
                       Text=""
                       FontSize="12"
                       TextColor="Gray"
                       HorizontalOptions="Center" />

                <!-- Pulsante Annulla -->
                <Button x:Name="CancelButton"
                        Text="Annulla"
                        BackgroundColor="#CC6666"
                        TextColor="White"
                        Clicked="OnCancelClicked"
                        Margin="0,10,0,0"
                        WidthRequest="120"
                        HorizontalOptions="Center" />

            </VerticalStackLayout>
        </Frame>
    </Grid>

</ContentPage>
