<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:ClaudeCodeMAUI.Models"
             x:Class="ClaudeCodeMAUI.MainPage"
             Title="Claude Code GUI">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">

        <!-- Toolbar -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
            <!-- Controlli principali sulla sinistra -->
            <HorizontalStackLayout Grid.Column="0" Spacing="10">
                <Button x:Name="BtnSelectSession"
                        Text="ðŸ“‚ Seleziona Sessione"
                        Clicked="OnSelectSessionClicked" />
                <Button x:Name="BtnStop"
                        Text="Stop"
                        Clicked="OnStopClicked"
                        IsEnabled="False" />
                <Label Text="Plan Mode:" VerticalOptions="Center" Margin="20,0,0,0" />
                <Switch x:Name="SwitchPlanMode"
                        Toggled="OnPlanModeToggled" />
                <Label Text="Theme:" VerticalOptions="Center" Margin="20,0,0,0" />
                <Switch x:Name="SwitchTheme"
                        Toggled="OnThemeToggled"
                        IsToggled="True" />
                <Label x:Name="LblTheme"
                       Text="Dark"
                       VerticalOptions="Center"
                       TextColor="Gray" />
                <Label x:Name="LblStatus"
                       Text="Ready"
                       VerticalOptions="Center"
                       Margin="20,0,0,0"
                       TextColor="Gray" />
            </HorizontalStackLayout>

            <!-- Pulsanti sulla destra (Context Info, View Session, Terminal e Settings) -->
            <HorizontalStackLayout Grid.Column="1"
                                   Spacing="10"
                                   VerticalOptions="Center"
                                   HorizontalOptions="End">
                <!-- Pulsante Context Info -->
                <Button x:Name="BtnContextInfo"
                        Text="ðŸ“Š"
                        FontSize="20"
                        WidthRequest="45"
                        HeightRequest="45"
                        CornerRadius="22"
                        BackgroundColor="#4A4A4A"
                        TextColor="White"
                        ToolTipProperties.Text="Show Context Information"
                        Clicked="OnContextInfoClicked"
                        VerticalOptions="Center" />

                <!-- Pulsante View Session (mostra TUTTE le sessioni unificate) -->
                <Button x:Name="BtnViewSession"
                        Text="ðŸ“„"
                        FontSize="20"
                        WidthRequest="45"
                        HeightRequest="45"
                        CornerRadius="22"
                        BackgroundColor="#4A4A4A"
                        TextColor="White"
                        ToolTipProperties.Text="View All Sessions (Unified Timeline)"
                        Clicked="OnViewSessionClicked"
                        VerticalOptions="Center" />

                <!-- Pulsante Terminal -->
                <Button x:Name="BtnTerminal"
                        Text="ðŸ–¥ï¸"
                        FontSize="20"
                        WidthRequest="45"
                        HeightRequest="45"
                        CornerRadius="22"
                        BackgroundColor="#4A4A4A"
                        TextColor="White"
                        ToolTipProperties.Text="Open Terminal with Resume"
                        Clicked="OnTerminalClicked"
                        VerticalOptions="Center" />

                <!-- Pulsante Settings -->
                <Button x:Name="BtnSettings"
                        Text="âš™ï¸"
                        FontSize="20"
                        WidthRequest="45"
                        HeightRequest="45"
                        CornerRadius="22"
                        BackgroundColor="#4A4A4A"
                        TextColor="White"
                        ToolTipProperties.Text="Settings"
                        Clicked="OnSettingsClicked"
                        VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Grid>

        <!-- TabView per gestione multi-sessione -->
        <Grid Grid.Row="1">
            <!-- Placeholder quando non ci sono tab aperti -->
            <VerticalStackLayout x:Name="NoSessionsPlaceholder"
                                 IsVisible="True"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="20">
                <Label Text="ðŸ“‚ Nessuna Sessione Aperta"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Gray" />
                <Label Text="Clicca su 'Seleziona Sessione' per aprire una sessione esistente o crearne una nuova"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="LightGray" />
            </VerticalStackLayout>

            <!-- TabBar semplificato (usiamo Grid con TabBar + ContentView) -->
            <Grid x:Name="SessionTabContainer"
                  IsVisible="False"
                  RowDefinitions="Auto,*">

                <!-- Tab Headers -->
                <ScrollView Grid.Row="0"
                            Orientation="Horizontal"
                            HeightRequest="40"
                            BackgroundColor="#1E1E1E">
                    <HorizontalStackLayout x:Name="TabHeadersContainer" Spacing="2" />
                </ScrollView>

                <!-- Tab Content -->
                <ContentView x:Name="CurrentTabContent"
                             Grid.Row="1"
                             BackgroundColor="#252526" />
            </Grid>
        </Grid>

        <!-- Input Area -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="10" RowDefinitions="Auto">
            <Editor x:Name="InputEditor"
                    Grid.Column="0"
                    Placeholder="Enter your message (Enter to send, Ctrl+Enter for new line)..."
                    AutoSize="TextChanges"
                    MinimumHeightRequest="40"
                    MaximumHeightRequest="200" />
            <Button x:Name="BtnSend"
                    Grid.Column="1"
                    Text="Send"
                    VerticalOptions="End"
                    Clicked="OnSendMessage" />
        </Grid>

        <!-- Toast Notification Container (overlay globale) -->
        <VerticalStackLayout x:Name="ToastContainer"
                             Spacing="10"
                             VerticalOptions="End"
                             HorizontalOptions="End"
                             Padding="0,0,20,20"
                             InputTransparent="True"
                             Grid.RowSpan="3" />

    </Grid>

</ContentPage>
