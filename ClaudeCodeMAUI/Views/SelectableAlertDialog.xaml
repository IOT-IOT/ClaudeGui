<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClaudeCodeMAUI.Views.SelectableAlertDialog"
             Title="Alert"
             BackgroundColor="#80000000">

    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <Frame BackgroundColor="#2A2A2A"
               Padding="20"
               CornerRadius="10"
               HasShadow="True"
               WidthRequest="400"
               MaximumWidthRequest="500">

            <VerticalStackLayout Spacing="15">

                <!-- Titolo -->
                <Label x:Name="TitleLabel"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center" />

                <!-- Messaggio selezionabile -->
                <ScrollView MaximumHeightRequest="300">
                    <Label x:Name="MessageLabel"
                           FontSize="14"
                           TextColor="White"
                           LineBreakMode="WordWrap"
                           FontFamily="Consolas" />
                </ScrollView>

                <!-- Pulsanti -->
                <HorizontalStackLayout x:Name="ButtonsContainer"
                                      Spacing="10"
                                      HorizontalOptions="Center"
                                      Margin="0,10,0,0">
                    <!-- I pulsanti vengono aggiunti dinamicamente dal code-behind -->
                </HorizontalStackLayout>

            </VerticalStackLayout>

        </Frame>
    </Grid>

</ContentPage>
